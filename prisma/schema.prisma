generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// id will be telegram user id
model User {
  id  Int @id
  derivationPath Int @unique @default(autoincrement()) @map("derivation_path")
  slippage  Float @default(0.3)
  chainId String? @map("chain_id")
  buyTokenAddress String? @map("buy_token_address")
  sellTokenAddress String? @map("sell_token_address")
  buyTokenName  String? @map("buy_token_name")
  sellTokenName String? @map("sell_token_name")

  @@map("users")
}
